#:kivy 2.0
#:import Window kivy.core.window.Window
#:set SYSTEM_BAR_HEIGHT 30
#:set IMAGE_TOOLBAR_WIDTH 40
#:set SYSTEM_INFO_BAR_HEIGHT 20

FloatLayout:
    BoxLayout:
        padding: 0, SYSTEM_BAR_HEIGHT, IMAGE_TOOLBAR_WIDTH, SYSTEM_INFO_BAR_HEIGHT
        BoxLayout:
            padding: 10,10,10,10
            orientation: "vertical"
            Tabs:
                id: dataTabs
                dataStore: dataStore
                pathInfo: pathInfo
                size_hint_y: None
                height: 35
                canvas.before:
                    Color:
                        rgb: .3,.3,.3
                    Rectangle:
                        size: self.size
                        pos: self.pos
            DataStore:
                id: dataStore
                dataTabs: dataTabs
                pathInfo: pathInfo
                canvas.before:
                    Color:
                        rgb: .3,.3,.3
                    Rectangle:
                        size: self.size
                        pos: self.pos
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        SystemToolbarLayout:
            size_hint_y: None
            height: SYSTEM_BAR_HEIGHT
            canvas.before:
                Color:
                    rgb: .3,.3,.3
                Rectangle:
                    size: self.size
                    pos: self.pos
            SystemToolbar:
                id: system_toolbar
                padding: 10,0,0,0
                orientation: "horizontal"
                SystemToolbarItem:
                    MDTextButton:
                        text: 'File'
                        on_release: system_toolbar.a()

    DataToolBarLayout:
        size_hint_y: None
        height: Window.height - SYSTEM_BAR_HEIGHT
        DataToolbar:
            id: dataToolbar
            dataStore: dataStore
            DataToolbarItem:
            DataToolbarItem:
                id: remakeNonNumericData
                text: "Remake"
                on_release: dataToolbar.remake_non_numeric_data()

            DataToolbarItem:
                id: createDescription
                on_release: dataToolbar.create_description()

    BoxLayout:
        id: sistemInfoBar
        orientation: "horizontal"
        size_hint_y: None
        height: SYSTEM_INFO_BAR_HEIGHT
        canvas.before:
            Color:
                rgb: 0.5,0.5,0.9
            Rectangle:
                size: self.size
                pos: self.pos
        PathInfo:
            id: pathInfo
            canvas.before:
                Color:
                    rgb: 0.1,0.5,0.9
                Rectangle:
                    size: self.size
                    pos: self.pos